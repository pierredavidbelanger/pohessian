         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>testHessianServlet</servlet-name>
        <servlet-class>com.caucho.hessian.test.TestHessianServlet</servlet-class>
