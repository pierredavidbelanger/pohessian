    <servlet>
        <servlet-name>testHessian2Servlet</servlet-name>
        <servlet-class>com.caucho.hessian.test.TestHessian2Servlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>testHessianServlet</servlet-name>
        <url-pattern>/basic</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>testHessian2Servlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

</web-app>
